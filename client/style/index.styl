.song-list
  display: flex;
  justify-content: center;
  min-height: 100px;
  ul
    border: 1px solid black;
    width: 600px;
    text-align: center;
  li
    border: 1px solid black;
    margin: 10px;
    padding: 10px;
    color: red;

.material-icons 
  cursor pointer

.delete-icon
  &:hover
    color red

.like-icon
  &:hover
    color #3b5998


.collection-item, .song-item
  display flex
  justify-content space-between  

.song-item
  cursor pointer
  &:hover
    background #eee

.vote-box
  display flex
  align-items center
  justify-content space-between
  width 42px

.lds-ring
  display inline-block
  position absolute
  top calc(50% - 64px)
  left calc(50% - 64px)
  width 64px
  height 64px
  div
    box-sizing border-box
    display block
    position absolute
    width 51px
    height 51px
    margin 6px
    border 6px solid #2E8B57
    border-radius 50%
    animation lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
    border-color #2E8B57 transparent transparent transparent
    &:nth-child(1)
      animation-delay -0.45s
    &:nth-child(2)
      animation-delay -0.3s
    &:nth-child(3)
      animation-delay -0.15s

@keyframes lds-ring
  0%
    transform rotate(0deg)  
  100%
    transform rotate(360deg)
  
